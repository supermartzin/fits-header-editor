<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cz.muni.fi.fits.gui.view.operationtabs.controllers.AddNewRecordTabController">
    <children>
        <Label layoutX="15.0" layoutY="14.0" text="%oper.add">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Label>
        <GridPane layoutX="14.0" layoutY="54.0" nodeOrientation="LEFT_TO_RIGHT" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"/>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES"/>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets left="15.0"/>
            </padding>
            <children>
                <Label text="%keyword">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%value" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%comment" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </Label>
                <TextField fx:id="keywordTextField" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </TextField>
                <CheckBox fx:id="updateIfExistsCheckBox" mnemonicParsing="false" text="%switch.update"
                          GridPane.columnSpan="2" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </CheckBox>
                <TextField fx:id="commentTextField" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                           GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </TextField>
                <ComboBox fx:id="valueTypeComboBox" minWidth="-Infinity" promptText="%choose.value"
                          GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </ComboBox>
                <CheckBox fx:id="valueCheckBox" mnemonicParsing="false" visible="false" GridPane.columnIndex="1"
                          GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </CheckBox>
                <TextField fx:id="valueTextField" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </TextField>
                <DatePicker fx:id="valueDatePicker" editable="false" maxWidth="1.7976931348623157E308" prefHeight="25.0"
                            showWeekNumbers="true" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </DatePicker>
                <HBox fx:id="valueDateTimeHBox" maxWidth="1.7976931348623157E308" spacing="5.0" visible="false"
                      GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets bottom="2.0" top="3.0"/>
                    </GridPane.margin>
                    <DatePicker fx:id="valueDateTimeDatePicker" editable="false" maxWidth="120.0" minWidth="120.0"
                                showWeekNumbers="true">
                        <HBox.margin>
                            <Insets left="5.0"/>
                        </HBox.margin>
                    </DatePicker>
                    <AnchorPane maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                        <TextField fx:id="valueDateTimeTimeField" minWidth="50.0" promptText="HH:mm:ss.SSS"
                                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="5.0"/>
                    </AnchorPane>
                </HBox>
                <TextField fx:id="valueNumberField" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0" top="2.0"/>
                    </GridPane.margin>
                </TextField>
                <TextField fx:id="valueTimeTextField" maxWidth="1.7976931348623157E308" promptText="HH:mm:ss.SSS"
                           visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </TextField>
            </children>
        </GridPane>
    </children>
</AnchorPane>
