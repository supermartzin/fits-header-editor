<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<ScrollPane fitToHeight="true" hbarPolicy="NEVER" maxWidth="450.0" minWidth="300.0" prefWidth="450.0" styleClass="edge-to-edge" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.muni.fi.fits.gui.view.controllers.FilesOverviewController">
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <AnchorPane maxWidth="450.0" minWidth="300.0" prefWidth="450.0">
        <Label layoutX="7.0" layoutY="6.0" text="%label.select.files" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="7.0" />
        <TableView fx:id="tableView" editable="true" minHeight="300.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="-1.0" AnchorPane.rightAnchor="-1.0" AnchorPane.topAnchor="30.0">
            <columns>
                <TableColumn fx:id="selectColumn" maxWidth="30.0" minWidth="30.0" prefWidth="30.0" resizable="false" sortable="false" />
                <TableColumn fx:id="filenameColumn" editable="false" minWidth="-1.0" prefWidth="170.0" text="%file.name" />
                <TableColumn fx:id="filepathColumn" editable="false" minWidth="-1.0" prefWidth="250.0" text="%file.path" />
            </columns>
            <contextMenu>
                <ContextMenu onHidden="#onContextMenuHidden" onShowing="#onContextMenuShowing">
                    <items>
                        <MenuItem fx:id="deleteMenuItem" disable="true" mnemonicParsing="false" onAction="#onDeleteContextMenu" text="%items.delete" />
                        <MenuItem fx:id="selectMenuItem" disable="true" mnemonicParsing="false" onAction="#onSelectContextMenu" text="%items.select" />
                        <MenuItem fx:id="deselectMenuItem" disable="true" mnemonicParsing="false" onAction="#onDeselectContextMenu" text="%items.deselect" />
                        <MenuItem fx:id="invertMenuItem" disable="true" mnemonicParsing="false" onAction="#onInvertContextMenu" text="%items.invert" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="130.0">
            <padding>
                <Insets left="10.0" />
            </padding>
            <Button fx:id="selectAllButton" disable="true" mnemonicParsing="false" onAction="#onSelectAll" prefWidth="85.0" text="%select.all" />
            <Button fx:id="selectNoneButton" disable="true" mnemonicParsing="false" onAction="#onSelectNone" prefWidth="85.0" text="%select.none" />
            <Button fx:id="invertSelectionButton" disable="true" mnemonicParsing="false" onAction="#onInvertSelection" prefWidth="100.0" text="%select.invert" />
        </HBox>
        <ButtonBar buttonMinWidth="100.0" layoutX="215.0" layoutY="400.0" prefHeight="40.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="320.0" AnchorPane.rightAnchor="0.0">
            <buttons>
                <Button mnemonicParsing="false" onAction="#onAddFiles" text="%select.files">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
            </buttons>
            <padding>
                <Insets right="15.0" />
            </padding>
        </ButtonBar>
        <Label fx:id="numberOfSelectedFilesLabel" alignment="CENTER_RIGHT" layoutX="401.0" layoutY="6.0" prefHeight="17.0" prefWidth="173.0" text="0" textAlignment="RIGHT" AnchorPane.rightAnchor="17.0">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
    </AnchorPane>
</ScrollPane>
