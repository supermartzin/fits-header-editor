<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.muni.fi.files.controller.MainLayoutController">
    <children>
      <VBox AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="10.0">
         <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="150.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="13.0" minHeight="-Infinity" prefHeight="11.0" valignment="CENTER" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="34.0" minHeight="-Infinity" prefHeight="34.0" valignment="CENTER" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="15.0" valignment="CENTER" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                    <Label text="V priečinku:" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets right="5.0" />
                     </GridPane.margin>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
                    <TextField fx:id="inputDirTextField" editable="false" promptText="kde sú uložené súbory na spracovanie" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <tooltip>
                        <Tooltip text="Priečinok, v ktorom sú uložené súbory na spracovanie (povinné pole)" />
                     </tooltip>
                     <GridPane.margin>
                        <Insets left="5.0" right="5.0" />
                     </GridPane.margin>
                  </TextField>
                    <Button mnemonicParsing="false" onAction="#onBrowseForInputDirectory" text="Vybrať..." GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="5.0" />
                     </GridPane.margin>
                  </Button>
                    <Label text="Filter (oddelený čiarkou):" GridPane.rowIndex="2">
                     <GridPane.margin>
                        <Insets right="5.0" />
                     </GridPane.margin>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
                    <TextField fx:id="filterTextField" promptText="napr.: 'fits,fts,fit'" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <tooltip>
                        <Tooltip text="Aký typ súborov zahrnúť do spracovania, prázdny = všetky súbory (nepovinné pole)" />
                     </tooltip>
                     <GridPane.margin>
                        <Insets left="5.0" right="5.0" />
                     </GridPane.margin>
                  </TextField>
                    <Separator GridPane.columnSpan="3" GridPane.rowIndex="3">
                     <GridPane.margin>
                        <Insets top="6.0" />
                     </GridPane.margin>
                  </Separator>
                    <Label text="UIožiť do:" GridPane.rowIndex="6">
                     <GridPane.margin>
                        <Insets right="5.0" />
                     </GridPane.margin>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
                    <TextField fx:id="outputDirTextField" editable="false" prefWidth="158.0" promptText="kde uložiť výstupný súbor" GridPane.columnIndex="1" GridPane.rowIndex="6">
                     <tooltip>
                        <Tooltip text="Priečinok, do ktorého uložiť výstupný súbor, prázdny = aktuálny priečinok (nepovinné pole)" />
                     </tooltip>
                     <GridPane.margin>
                        <Insets left="5.0" right="5.0" />
                     </GridPane.margin>
                  </TextField>
                    <Button mnemonicParsing="false" onAction="#onBrowseForOutputDirectory" text="Vybrať..." GridPane.columnIndex="2" GridPane.rowIndex="6">
                     <GridPane.margin>
                        <Insets left="5.0" />
                     </GridPane.margin>
                  </Button>
                    <Label text="Názov súboru:" GridPane.rowIndex="5">
                     <GridPane.margin>
                        <Insets right="5.0" />
                     </GridPane.margin>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
                    <TextField fx:id="outputFileNameTextField" promptText="aj s príponou (napr. 'file.out')" GridPane.columnIndex="1" GridPane.rowIndex="5">
                     <tooltip>
                        <Tooltip text="Názov výstupného súboru, do ktorého uložiť cesty k súborom (povinné pole)" />
                     </tooltip>
                     <GridPane.margin>
                        <Insets left="5.0" right="5.0" />
                     </GridPane.margin>
                  </TextField>
                    <Separator GridPane.columnSpan="3" GridPane.rowIndex="7">
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                  </Separator>
                  <Label text="Vygenerovaný súbor s cestami" GridPane.columnSpan="2" GridPane.rowIndex="4">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <GridPane.margin>
                        <Insets left="2.0" />
                     </GridPane.margin>
                  </Label>
                  <Label text="Súbory na spracovanie" GridPane.columnSpan="2">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <GridPane.margin>
                        <Insets left="2.0" />
                     </GridPane.margin>
                  </Label>
               </children>
            </GridPane>
            <GridPane maxHeight="40.0" minHeight="40.0" prefHeight="40.0">
              <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
                <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints valignment="CENTER" vgrow="NEVER" />
              </rowConstraints>
               <children>
                  <AnchorPane>
                     <children>
                        <ProgressBar fx:id="progressBar" progress="0.0" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <padding>
                              <Insets bottom="5.0" right="5.0" top="5.0" />
                           </padding>
                        </ProgressBar>
                     </children>
                  </AnchorPane>
                    <Button fx:id="createOutputFileButton" mnemonicParsing="false" onAction="#onCreateFile" prefHeight="40.0" text="Vytvoriť" GridPane.columnIndex="1">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                     <GridPane.margin>
                        <Insets left="5.0" />
                     </GridPane.margin>
                    </Button>
               </children>
            </GridPane>
         </children>
      </VBox>
    </children>
</AnchorPane>
